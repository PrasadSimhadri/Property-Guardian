    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-rbsA0YBhvz0lSB4J4l9QS9kNL2e2Q/fKX+hyhDjD6y3j3Q+Eo2tT0EH+Wy5qUG9" crossorigin="anonymous">


    <style>
        /* Styles for sidebar */

        .sidebar {
            background-color: #2c3e50;
            width: 20rem;
            padding: 20px;
            height: 120vh;
            box-shadow: 2px 0 5px rgba(0, 0, 0, 0.1);
            position: fixed;
            margin-top: 4rem;
            margin-left: -1rem;
        }

        .sidebar ul {
            list-style: none;
            padding: 0;
        }

        .sidebar a {
            text-decoration: none;
            display: block;
            padding: 10px;
            background-color: #34495e;
            color: #ecf0f1;
            font-size: 16px;
            font-family: Arial, Helvetica, sans-serif;
            border: 1px solid #2c3e50;
            border-radius: 5px;
            cursor: pointer;
            margin-bottom: 15px;
        }

        .sidebar a:hover {
            background-color: #2c3e50;
        }


        .sidebar select {
            width: 100%;
            padding: 10px;
            margin-bottom: 15px;
            background-color: #34495e;
            color: #ecf0f1;
            font-size: 16px;
            border: 1px solid #2c3e50;
            border-radius: 5px;
            appearance: none;
            cursor: pointer;
        }


        .sidebar select:hover {
            background-color: #2c3e50;
        }

        /* General styling */

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #ecf0f1;
            background-color: beige;
        }

        .container {
            margin-left: 0;
        }

        /* Card styling */

        .maindata {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            width: 30rem;
            margin-left: 45rem;
        }

        .card {
            text-align: center;
            width: 300px;
            padding: 20px;
            background-color: #ecf0f1;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
            transition: transform 0.3s;
        }

        .card:hover {
            transform: scale(1.05);
        }

        .card h2 {
            margin-bottom: 10px;
            font-size: 1.5rem;
        }

        .card em {
            font-style: normal;
            color: #3498db;
        }

        /* Flip card styling */

        .flip-card {
            background-color: transparent;
            height: 404px;
            perspective: 1000px;
        }

        .flip-card-inner {
            position: relative;
            text-align: center;
            transition: transform 1.5s;
            transform-style: preserve-3d;
            height: 100%;
        }

        .flip-card:hover .flip-card-inner {
            transform: rotateY(180deg);
        }

        .flip-card-front,
        .flip-card-back {
            position: absolute;
            -webkit-backface-visibility: hidden;
            backface-visibility: hidden;
            height: 100%;
            width: 100%;
            border-radius: 10px;
        }

        .flip-card-front {
            background-color: #3498db;
            color: #ecf0f1;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }

        .flip-card-back {
            background-color: #2c3e50;
            color: #ecf0f1;
            transform: rotateY(180deg);
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }

        .name,
        .in1 {
            display: flex;
        }

        em {
            margin-top: 1px;
        }


        h3,
        h4 {
            margin-top: 1px;
        }

        .heading {
            margin-left: 10rem;
        }

        .button {
            margin-left: 10rem;
            margin-top: 1rem;
            margin-bottom: 3rem;
            width: 30rem;
            padding: 1rem;
            border-radius: 2rem;
            background-color: #2c3e50;
            color: wheat;
            cursor: pointer;
            box-shadow: 5px 10px 20px pink inset;
        }

        .button:hover {
            background-color: #81a1c1;
            color: black;
            cursor: pointer;
            box-shadow: 5px 10px 20px white inset;
            transition: 0.5s;
            border: 2px solid yellow;
        }

        a {
            text-decoration: none;
        }

        li .dropbtn {
            display: inline-block;
            color: black;
            text-align: center;
            padding: 14px 16px;
            text-decoration: none;
        }

        li a:hover,
        .dropdown:hover .dropbtn {
            text-decoration: none;
        }

        li.dropdown {
            display: inline-block;
        }

        .dropdown-content {
            display: none;
            position: absolute;
            background-color: #f9f9f9;
            min-width: 160px;
            box-shadow: 0px 8px 16px 0px rgba(0, 0, 0, 0.2);
            z-index: 1;
        }

        .dropdown-content a {
            color: black;
            padding: 12px 16px;
            text-decoration: none;
            display: block;
            text-align: left;
        }

        .dropdown-content option:hover {
            background-color: rgb(198, 231, 231);
            cursor: pointer;
        }

        .dropdown-content a:hover {
            background-color: rgb(198, 231, 231);
            cursor: pointer;
        }

        .dropdown:hover .dropdown-content {
            display: block;
        }

        .btn {
            margin-right: 2rem;
        }

        .navbar-brand {
            margin-left: 2rem;

        }

        .navbar {
            box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
            z-index: 3;
            position: fixed;
            width: 100%;
        }

        h3,
        h4 {
            font-size: 1.05rem;
        }

        .logoname {
            font-size: 1.75rem;
        }

        .pageheadings {
            margin-top: 7rem;
            height: 10rem;
            margin-left: 30rem;
            text-align: center;
            display: inline-block;
            width: 40rem;
        }
    </style>
</head>

