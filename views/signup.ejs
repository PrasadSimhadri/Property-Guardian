<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign Up</title>
</head>
<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .main {
        display: flex;
        margin-left: 5rem;
        margin-top: 7rem;
    }

    .maintext {
        line-height: 40%;
        background-color: wheat;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        padding: 2rem;
        height: 18rem;
        border-radius: 5px;
        width: 30rem;
    }

    .maintext1 {
        line-height: 40%;
        background-color: wheat;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        padding: 1rem;
        height: 9rem;
        width: 28rem;
        border-radius: 5px;
        margin-top: 5rem;
    }

    .p1 {
        font-size: 26px;
        font-weight: 600;
    }

    .p2 {
        opacity: 0.7;

    }

    b {
        color: green;
    }

    button {
        width: 20rem;
        padding: 0.5rem 2rem;
        background-color: #2c3e50;
        color: wheat;
        border-radius: 20px;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        cursor: pointer;
    }

    button:hover {
        background-color: #415264;
    }

    .p3 {
        margin-left: 4.5rem;
    }

    .p3:hover {
        text-decoration: underline;
    }

    a {
        text-decoration: none;
        color: black;
    }

    input[type="text"],
    input[type="email"],
    input[type="password"] {
        width: 300px;
        padding: 10px;
        margin: 5px 0;
        box-sizing: border-box;
        border: 1px solid #ccc;
        border-radius: 5px;
        font-size: 16px;
    }

    input[type="text"]:focus {
        outline: none;
        border-color: #4CAF50;
        box-shadow: 0 0 5px rgba(76, 175, 80, 0.7);
    }

    input[type="email"]:focus {
        outline: none;
        border-color: #4CAF50;
        box-shadow: 0 0 5px rgba(76, 175, 80, 0.7);
    }

    input[type="password"]:focus {
        outline: none;
        border-color: #4CAF50;
        box-shadow: 0 0 5px rgba(76, 175, 80, 0.7);
    }

    input:placeholder-shown {
        font-size: 12px;
    }

    .hidden {
        display: none;
    }
</style>

<body>
    <div class="main">
        <div class="maintext">
            <form id="signupForm" action="/register" method="post">
                <p class="p1">Create Account</p>
                <p class="p2">or use your email for registration</p><br><br>
                <input type="text" id="username" name="username" placeholder="Username" required><br>
                <input type="email" id="email" name="email" placeholder="Email" required><br>
                <input type="password" id="password" name="password" placeholder="Password" required><br><br><br><br>
                <button type="submit">SIGN UP</button><br>
            </form>
            <div class="maintext1">
                <p class="p1">Welcome Back!</p>
                <p class="p2">To keep connected with us, please login with your personal info</p>
                <a href="/login">
                    <button id="signInBtn">SIGN IN</button><br>
                </a>
            </div>
        </div>
        <div class="lockimage">
            <img src="/images/sign_up.jpg" alt="" height="500">
        </div>
    </div>
    <script>
        // Add event listener to hide the form when "Sign In" button is clicked
        signInBtn.addEventListener('click', function () {
            signupForm.classList.add('hidden');
        });
    </script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Find the signup form and the Sign In button
            const signupForm = document.getElementById('signupForm');
            const signInBtn = document.getElementById('signInBtn');

            // Add event listener to hide the form when "Sign In" button is clicked
            signInBtn.addEventListener('click', function () {
                signupForm.classList.add('hidden');
            });

            // Check for successful signup and clear history
            const queryParams = new URLSearchParams(window.location.search);
            const successParam = queryParams.get('success');

            if (successParam === 'true') {
                // Use replaceState to clear history
                window.history.replaceState(null, null, window.location.pathname);

                // Remove the successParam from the URL
                const urlWithoutParam = window.location.href.replace(window.location.search, '');
                window.history.replaceState(null, null, urlWithoutParam);
            }
        });
    </script>
</body>

</html>